SELECT id FROM JUGADOR WHERE JUGADOR.nombre;
DROP DATABASE IF EXISTS Juego;
CREATE DATABASE Juego;

USE Juego;

CREATE TABLE JUGADOR (
        nombre TEXT NOT NULL, /*NOT NULL -> no puede contener valores nulos*/
        pwd TEXT NOT NULL,
        id INTEGER PRIMARY KEY NOT NULL /*INTEGER PRIMARY KEY NOT NULL -> identifica de manera única cada fila de una tabla*/
 )ENGINE = InnoDB;

CREATE TABLE PARTIDA (
        ganador INTEGER,
        duracion FLOAT,
        data_temps DATETIME,
        id INTEGER PRIMARY KEY NOT NULL
 )ENGINE = InnoDB;

CREATE TABLE PARTICIPACION (
        JUGADOR INTEGER NOT NULL,
        PARTIDA INTEGER NOT NULL,
        FOREIGN KEY (JUGADOR) REFERENCES JUGADOR(id),
        FOREIGN KEY (PARTIDA) REFERENCES PARTIDA(id)
 )ENGINE = InnoDB;

/*CREATE TABLE CONNECTAR (
	socket INT NOT NULL, //socket -> punto final en una connexion
	id_P INT NOT NULL,
	id_C INT AUTO_INCREMENT,
	id_C INTEGER PRIMARY KEY NOT NULL,
	FOREIGN KEY (id_P) REFERENCES JUGADOR (id) //FOREIGN KEY -> columna/as que sirven para señalar cual es la clave primaria de otra tabla
)ENGINE = InnoDB;*/


